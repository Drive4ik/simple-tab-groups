{
    "manifest_version": 3,

    "browser_specific_settings": {
        "gecko": {
            "id": "stg-plugin-create-new-tab@drive4ik",
            "strict_min_version": "112.0"
        }
    },

    "incognito": "not_allowed",

    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "3.0",
    "author": "Drive4ik",
    "homepage_url": "https://github.com/drive4ik/simple-tab-groups",

    "icons": {
        "16": "/icons/icon.svg"
    },

    "action": {
        "default_area": "tabstrip",
        "default_icon": "/icons/icon.svg",
        "default_title": "__MSG_newTabTitle__"
    },

    "permissions": [
        "notifications",
        "cookies"
    ],

    "background": {
        "scripts": ["background.js"],
        "type": "module"
    },

    "default_locale": "en",

    "commands": {
        "_execute_action": {
            "description": "__MSG_newTabTitle__"
        }
    }

}
