{
    "manifest_version": 3,

    "browser_specific_settings": {
        "gecko": {
            "id": "stg-plugin-load-custom-group@drive4ik",
            "strict_min_version": "128.0"
        }
    },

    "incognito": "not_allowed",

    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "3.0",
    "author": "Drive4ik",
    "homepage_url": "https://github.com/drive4ik/simple-tab-groups",

    "icons": {
        "96": "icons/icon.svg"
    },

    "action": {
        "default_area": "tabstrip",
        "default_icon": "icons/icon.svg?nocache",
        "default_title": "__MSG_defaultBrowserActionTitle__"
    },

    "permissions": [
        "notifications",
        "menus",
        "alarms",
        "storage"
    ],

    "background": {
        "scripts": ["background.js"],
        "type": "module"
    },

    "options_ui": {
        "page": "options/options.html"
    },

    "default_locale": "en",

    "commands": {
        "_execute_action": {
            "description": "__MSG_defaultBrowserActionTitle__"
        }
    }


}
