{
    "name": "simple-tab-groups",
    "version": "1.0.0",
    "description": "Create, modify and quickly change tab groups. \nInspired by the old add-on \"Tab Groups\" :)",
    "author": "Drive4ik <drive4ik@gmail.com>",
    "scripts": {
        "build": "webpack --mode development --progress --hide-modules",
        "build:prod": "cross-env IS_PRODUCTION=true webpack --mode production --progress --hide-modules",
        "watch": "npm run build -- --watch",
        "watch:prod": "npm run build:prod -- --watch",
        "build-zip": "npm run build && node scripts/build-zip.js && npm run build:prod && cross-env IS_PRODUCTION=true node scripts/build-zip.js"
    },
    "dependencies": {
        "vue": "^2.5.16",
        "vue-swatches": "^1.0.1"
    },
    "devDependencies": {
        "copy-webpack-plugin": "^4.5.2",
        "cross-env": "^5.2.0",
        "css-loader": "^0.28.11",
        "del-webpack-plugin": "^1.0.6",
        "extract-text-webpack-plugin": "^4.0.0-beta.0",
        "file-loader": "^1.1.11",
        "html-webpack-plugin": "^3.2.0",
        "node-sass": "^4.9.0",
        "sass-loader": "^7.0.3",
        "style-loader": "^0.21.0",
        "vue-loader": "^15.2.4",
        "vue-template-compiler": "^2.5.13",
        "webpack": "^4.12.1",
        "webpack-cli": "^3.0.8",
        "webpack-shell-plugin": "^0.5.0",
        "zip-folder": "^1.0.0"
    }
}
